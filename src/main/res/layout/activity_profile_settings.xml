<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="16dp"
    tools:context=".ProfileSettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="12dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/go_back"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_home"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/babydoll"
                android:gravity="center"
                android:text="@string/profile_settings"
                android:textColor="#000"
                android:textSize="24sp" />
        </LinearLayout>

        <!-- Profile Picture -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="#DDDDDD"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_placeholder"
            tools:ignore="ImageContrastCheck" />

        <!-- Username -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="16sp"
            android:textColor="#000"
            android:fontFamily="@font/babydoll"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F5BDD8"
            android:padding="12dp"
            android:text="@string/your_username"
            android:textColor="#444"
            android:fontFamily="@font/babydoll" />

        <!-- Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/email_1"
            android:textSize="16sp"
            android:textColor="#000"
            android:fontFamily="@font/babydoll" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F5BDD8"
            android:padding="12dp"
            android:text="@string/your_email_com"
            android:textColor="#444"
            android:fontFamily="@font/babydoll" />

        <!-- Password -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/password_2"
            android:textSize="16sp"
            android:textColor="#000"
            android:fontFamily="@font/babydoll" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F5BDD8"
            android:padding="12dp"
            android:text="@string/pass"
            android:textColor="#444"
            android:fontFamily="@font/babydoll" />

        <!-- Notifications -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/notifications"
            android:textSize="16sp"
            android:textColor="#000"
            android:fontFamily="@font/babydoll" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F5BDD8"
            android:padding="12dp"
            android:text="@string/enabled"
            android:textColor="#444"
            android:fontFamily="@font/babydoll" />

        <!-- Theme -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/theme"
            android:textSize="16sp"
            android:textColor="#000"
            android:fontFamily="@font/babydoll" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#F5BDD8"
            android:padding="12dp"
            android:text="@string/light_mode"
            android:textColor="#444"
            android:fontFamily="@font/babydoll" />

        <!-- About -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/about_this_app"
            android:textSize="16sp"
            android:textColor="#000"
            android:fontFamily="@font/babydoll" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F5BDD8"
            android:padding="12dp"
            android:text="Version 1.0.0\nCreated with ❤️ by You."
            android:textColor="#333"
            android:fontFamily="@font/babydoll"
            tools:ignore="HardcodedText" />

        <!-- Logout -->
        <TextView
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:background="#FFCCCC"
            android:text="@string/log_out"
            android:textColor="#000"
            android:textSize="18sp"
            android:fontFamily="@font/babydoll" />
    </LinearLayout>
</ScrollView>
