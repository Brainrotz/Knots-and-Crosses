<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg">

    <!-- Top Bar with Home Button and Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="132dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/go_to_home"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_home"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/galleryTitle"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:fontFamily="@font/babydoll"
            android:gravity="center"
            android:paddingEnd="30dp"
            android:text="@string/my_projects"
            android:textColor="#000"
            android:textSize="24sp"
            tools:ignore="RtlSymmetry,TextSizeCheck" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/galleryContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/mockImage1"
                android:layout_width="343dp"
                android:layout_height="627dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/mock_project_1_image"
                android:scaleType="centerCrop"
                android:src="@drawable/mock_1" />

            <ImageView
                android:id="@+id/mockImage2"
                android:layout_width="343dp"
                android:layout_height="627dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/mock_project_2_image"
                android:src="@drawable/mock_2" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
