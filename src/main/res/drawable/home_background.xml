<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer purple border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ED44F2"/>
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Middle pink border -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#F5BDD8"/>
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Inner purple border -->
    <item android:left="20dp" android:top="20dp" android:right="20dp" android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#ED44F2"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Background image inside inner borders -->
    <item android:left="22dp" android:top="22dp" android:right="22dp" android:bottom="22dp">
        <bitmap
            android:src="@drawable/bg"
            android:gravity="fill" />
    </item>

</layer-list>
